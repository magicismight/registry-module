{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "strict": true,
    "allowJs": false,
    "skipLibCheck": true,
    "sourceMap": true,
    "importHelpers": true,
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "lib": ["es2015", "dom"],
    "outDir": "./dist"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["src/**/*.spec.ts", "src/**/*.test.ts"]
}
